doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title My Applications
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
  
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        h2.navbar-brand Campus Recruitment System
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/studentDashboard") Dashboard
            li.nav-item
              a.nav-link(href="/jobs") View Jobs
            li.nav-item
              a.nav-link(href="/studentApplications") My Applications
            li.nav-item
              a.nav-link(href="/logout") Logout

    // Applications Section
    .container.mt-5
      h5.mb-4 My Job Applications
      .list-group#applications-container
        if applications.length === 0
          .alert.alert-info(role="alert") You have no applications at this time.
        else
          ul
            each application in applications
              li.list-group-item
                h3= application.job.jobTitle 
                p
                  strong Company:
                  |  #{application.job.company} 
                p
                  strong Status:
                  |  #{application.status} 

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
