<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Jobs</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Job Portal</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/studentDashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/jobs">View Jobs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/studentApplications">My Applications</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h1 class="text-center">Available Jobs</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Job Title</th>
          <th>Company</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tbody>
          <% jobs.forEach(function(job) { %>
            <tr>
                <td><%= job.jobTitle %></td>
                <td><%= job.company %></td>
                <td><%= job.location %></td>
                <td>
                    <% if (appliedJobs.includes(job._id.toString())) { %>
                        <button class="btn btn-secondary" disabled>Applied</button>
                    <% } else { %>
                        <form action="/applyJob" method="POST">
                            <input type="hidden" name="jobId" value="<%= job._id %>">
                            <button class="btn btn-primary" type="submit">Apply</button>
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }) %>
        
        </tbody>
        
      </tbody>
    </table>
  </div>

  <script>
    function applyForJob(jobId, button) {
      // Disable button and change text to "Applied"
      button.innerText = 'Applied';
      button.disabled = true;

      // Make an API call to apply for the job
      fetch('/applyJob', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ jobId: jobId }),
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Error applying for job.');
        }
        return response.json();
      })
      .then(data => {
        console.log('Application successful:', data);
      })
      .catch(error => {
        console.error(error);
        alert('Error applying for job.');
        // Re-enable the button if there was an error
        button.innerText = 'Apply';
        button.disabled = false;
      });
    }
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
