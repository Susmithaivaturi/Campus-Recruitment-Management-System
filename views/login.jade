doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet", href="/css/styles.css")
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
  
  body
    // Bootstrap Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        h2.navbar-brand Campus Recruitment System
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/register") Register

    .container.mt-5
      h2.text-center Login
      .row.justify-content-center
        .col-md-6
          form.border.p-4.rounded.shadow(method="POST", action="/login")
            .mb-3
              label(for="email", class="form-label") Email:
              input#email.form-control(type="email", name="email", required)
            .mb-3
              label(for="password", class="form-label") Password:
              input#password.form-control(type="password", name="password", required)
            button.btn.btn-primary.w-100(type="submit") Login

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
