<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Applications</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <h2 class="navbar-brand">Campus Recruitment System</h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/studentDashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/jobs">View Jobs</a></li>
                    <li class="nav-item"><a class="nav-link" href="/studentApplications">My Applications</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Applications Section -->
    <div class="container mt-5">
        <h5 class="mb-4">My Job Applications</h5>
        <div class="list-group" id="applications-container">
            <% if (applications.length === 0) { %>
                <div class="alert alert-info" role="alert">
                    You have no applications at this time.
                </div>
            <% } else { %>
                <ul>
                    <% applications.forEach(function(application) { %>
                        <li class="list-group-item">
                            <h3><%= application.job.jobTitle %></h3> <!-- Job Title -->
                            <p><strong>Company:</strong> <%= application.job.company %></p> <!-- Company Name -->
                            <p><strong>Status:</strong> <%= application.status %></p> <!-- Application Status -->
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
