doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Student Dashboard
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        h2.navbar-brand Campus Recruitment System
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/studentDashboard") Dashboard
            li.nav-item
              a.nav-link(href="/jobs") View Jobs
            li.nav-item
              a.nav-link(href="/studentApplications") My Applications
            li.nav-item
              a.nav-link(href="/logout") Logout

    // Profile Section
    .container.mt-5
      .row
        .col-md-12
          .card.card-custom.shadow-sm
            .card-body
              h5.card-title Student Information
              ul.list-group.list-group-flush
                li.list-group-item
                  strong Name:
                  = user.name
                li.list-group-item
                  strong Email:
                  = user.email

    // Applications Stats Section
    .container.mt-4
      .row
        .col-md-4
          .card.shadow-sm
            .card-body
              h5.card-title Total Applications
              p.card-text.display-6 3
              // Update this number dynamically

    // List of Applied Jobs Section
    .container.mt-4
      .card.shadow-sm
        .card-body
          h5.card-title Applied Jobs
          ul.list-group
            li.list-group-item Software Engineer at XYZ Corp
            li.list-group-item Web Developer at Wipro
            li.list-group-item AI Research Intern at TechLabs
            // Add more jobs as needed

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
